<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imustacm.dao.SmeltDao">

	<!-- smelt 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
            id,
            create_time AS createTime,
            number,
            frist_tare AS fristTare,
            frist_net_weight AS fristNetWeight,
            second_tare AS secondTare,
            second_net_weight AS secondNetWeight,
            discharge,
            feeding,
            yield,
            operator
		]]>
	</sql>

	<!-- smelt 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM smelt]]></sql>

	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
			<if test="createTime != null and createTime != ''"><![CDATA[AND create_time = #{createTime}]]></if>
			<if test="number != null and number != ''"><![CDATA[AND number = #{number}]]></if>
			<if test="fristTare != null and fristTare != ''"><![CDATA[AND frist_tare = #{fristTare}]]></if>
			<if test="fristNetWeight != null and fristNetWeight != ''"><![CDATA[AND frist_net_weight = #{fristNetWeight}]]></if>
			<if test="secondTare != null and secondTare != ''"><![CDATA[AND second_tare = #{secondTare}]]></if>
			<if test="secondNetWeight != null and secondNetWeight != ''"><![CDATA[AND second_net_weight = #{secondNetWeight}]]></if>
			<if test="discharge != null and discharge != ''"><![CDATA[AND discharge = #{discharge}]]></if>
			<if test="feeding != null and feeding != ''"><![CDATA[AND feeding = #{feeding}]]></if>
			<if test="yield != null and yield != ''"><![CDATA[AND yield = #{yield}]]></if>
			<if test="operator != null and operator != ''"><![CDATA[AND operator = #{operator}]]></if>
		</where>
	</sql>

	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="createTime != null"><![CDATA[create_time = #{createTime},]]></if>
			<if test="number != null"><![CDATA[number = #{number},]]></if>
			<if test="fristTare != null"><![CDATA[frist_tare = #{fristTare},]]></if>
			<if test="fristNetWeight != null"><![CDATA[frist_net_weight = #{fristNetWeight},]]></if>
			<if test="secondTare != null"><![CDATA[second_tare = #{secondTare},]]></if>
			<if test="secondNetWeight != null"><![CDATA[second_net_weight = #{secondNetWeight},]]></if>
			<if test="discharge != null"><![CDATA[discharge = #{discharge},]]></if>
			<if test="feeding != null"><![CDATA[feeding = #{feeding},]]></if>
			<if test="yield != null"><![CDATA[yield = #{yield},]]></if>
			<if test="operator != null"><![CDATA[operator = #{operator},]]></if>
		</set>
	</sql>

	<!-- 插入app记录 -->
	<insert id="insertEntry" parameterType="smelt" >
		<![CDATA[
			INSERT INTO smelt
				(
                id,
                create_time,
                number,
                frist_tare,
                frist_net_weight,
                second_tare,
                second_net_weight,
                discharge,
                feeding,
                yield,
                operator
				)
			VALUES
				(
                #{id},
                #{createTime},
                #{number},
                #{fristTare},
                #{fristNetWeight},
                #{secondTare},
                #{secondNetWeight},
                #{discharge},
                #{feeding},
                #{yield},
                #{operator}
				)
		]]>
	</insert>

	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM smelt WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<delete id="deleteByCondtion" parameterType="smelt" >
		<![CDATA[DELETE FROM smelt]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="smelt" >
		<![CDATA[UPDATE smelt]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="smelt">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="smelt" resultType="smelt">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="smelt" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>

	<!-- 其它SQL语句 -->

</mapper>